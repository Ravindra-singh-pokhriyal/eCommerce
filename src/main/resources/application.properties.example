# Example application properties (kept in repository as a template)
# Copy this file to src/main/resources/application.properties and fill in your secrets locally.
# Do NOT commit the real application.properties file with secrets.

spring.application.name=e-commerce

# Database (replace with your local DB settings)
spring.datasource.url=jdbc:mysql://localhost:3306/ecommerce_db
spring.datasource.username=your_db_username
spring.datasource.password=your_db_password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true

# Mail (use a local secret store or environment variables in production)
spring.mail.host=smtp.gmail.com
spring.mail.username=your_email@example.com
spring.mail.password=your_app_specific_password_or_env_variable
spring.mail.port=587
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true

# File upload limits
spring.servlet.multipart.max-file-size=50MB
spring.servlet.multipart.max-request-size=50MB
